<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SnakeWPF" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="SnakeWPF.MainWindow"
        Title="Snake" KeyDown="Window_KeyDown" Deactivated="SnakeWindow_Deactivated" Icon="snake_icon.ico" Closed="SnakeWindow_Closed" KeyUp="Window_KeyUp" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid x:Name="grid_window" Background="#FFE5E5E5">
        <Grid x:Name="grid_game" Background="#FFE5E5E5">
            <Rectangle x:Name="rec_field" HorizontalAlignment="Left" Height="483" VerticalAlignment="Top" Width="759" StrokeThickness="1" Margin="4,4,4,4" Stroke="Black"/>
            <Label x:Name="lb_pause" Content="Spiel pausiert, &#xA;drücke Leertaste um fortzufahren" HorizontalAlignment="Left" Margin="208,213,0,0" VerticalAlignment="Top" Height="69" Width="368" Foreground="White" FontSize="24" Visibility="Hidden"/>
            <local:PlayerStats x:Name="ps_game_1" HorizontalAlignment="Left" Margin="767,4,4,0" VerticalAlignment="Top" Header="Spieler1" BlockColor="DarkOrange" ChangeAllowed="False" X="3" Y="3" Direction="Right"/>
            <local:PlayerStats x:Name="ps_game_2" HorizontalAlignment="Left" Margin="767,204,4,0" VerticalAlignment="Top" Header="Spieler 2" BlockColor="DarkRed" X="29" Y="17" ChangeAllowed="False" Direction="Left"/>
            <Label x:Name="lb_count" Content="" HorizontalAlignment="Left" Margin="372,223,0,0" VerticalAlignment="Top" FontSize="24" Foreground="White"/>
        </Grid>
        <Grid x:Name="grid_gameover" HorizontalAlignment="Left" Width="759" Margin="4,4,0,0" Height="483" VerticalAlignment="Top">
            <Grid.Background>
                <SolidColorBrush Opacity="0.75" Color="#FFE5E5E5"/>
            </Grid.Background>
            <Label Content="Spiel Beendet!" Margin="320,172,0,0" VerticalAlignment="Top" FontSize="20" HorizontalAlignment="Left" Width="138"/>
            <Button x:Name="bt_exit" Content="Verlassen" Margin="350,214,0,0" VerticalAlignment="Top" Click="bt_exit_Click" Height="25" FontSize="15" HorizontalAlignment="Left" Width="76"/>
        </Grid>
        <Grid x:Name="grid_start" Background="#FFE5E5E5" Width="Auto" Margin="8,0,0,8">
            <local:PlayerStats x:Name="ps_single" Margin="209,128,0,0" BlockColor="DarkOrange" HorizontalAlignment="Left" VerticalAlignment="Top" ChangeAllowed="True" X="3" Y="3" Direction="Right"/>
            <local:PlayerStats x:Name="ps_multi" Margin="344,128,0,0" Header="Spieler 2" BlockColor="DarkRed" X="29" Y="17" VerticalAlignment="Top" HorizontalAlignment="Left" ChangeAllowed="True"/>
            <Label x:Name="lb_info" Content="Version 2.x, © Manuel Stroh 2013 - 2016" Margin="0,0,10,10" HorizontalAlignment="Right" Width="Auto" Height="26" VerticalAlignment="Bottom"/>
            <Grid x:Name="grid_control" Background="LightGray" Margin="700,128,-76,165" HorizontalAlignment="Left" Width="135">
                <Label Content="Steuerung" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontWeight="Bold" Background="DarkGray"/>
                <Label x:Name="lb_player1" Content="Spieler 1:" HorizontalAlignment="Left" Margin="0,27,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lb_player2" Content="Spieler 2:" HorizontalAlignment="Left" Margin="0,53,0,0" VerticalAlignment="Top"/>
                <Label Content="Start/Pause:" HorizontalAlignment="Left" Margin="0,79,0,0" VerticalAlignment="Top"/>
                <Label Content="Stop:" HorizontalAlignment="Left" Margin="0,105,0,0" VerticalAlignment="Top"/>
                <Label Content="WASD" Margin="0,27,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" FlowDirection="RightToLeft"/>
                <Label Content="Pfeiltasten" Margin="0,53,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" FlowDirection="RightToLeft"/>
                <Label Content="Leertaste" Margin="0,79,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" FlowDirection="RightToLeft"/>
                <Label Content="Escape" Margin="0,105,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" FlowDirection="RightToLeft"/>
            </Grid>
            <Grid x:Name="grid_online" Background="LightGray" Margin="479,128,0,165" HorizontalAlignment="Left" Width="216">
                <Label Content="Online" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontWeight="Bold" Background="DarkGray"/>
                <Label x:Name="lb_status" Content="Nicht verbunden" HorizontalAlignment="Left" Margin="10,129,0,0" VerticalAlignment="Top"/>
                <Button x:Name="bt_server" Content="Server" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Width="90" Click="bt_server_Click"/>
                <Button x:Name="bt_connect" Content="Verbinden" HorizontalAlignment="Left" Margin="111,71,0,0" VerticalAlignment="Top" Width="90" Click="bt_connect_Click"/>
                <Label x:Name="lb_connected" Content="Verbunden!" HorizontalAlignment="Left" Margin="126,155,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="tb_ip" HorizontalAlignment="Left" Height="22" Margin="82,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <Label Content="IP Adresse:" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top"/>
                <Label Content="Verbindungsstatus:" HorizontalAlignment="Left" Margin="10,155,0,0" VerticalAlignment="Top"/>
                <RadioButton x:Name="rb_server" Content="Server" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" GroupName="rb_online" IsChecked="True" Checked="rb_server_Checked"/>
                <RadioButton x:Name="rb_client" Content="Client" HorizontalAlignment="Left" Margin="100,32,0,0" VerticalAlignment="Top" GroupName="rb_online" Checked="rb_client_Checked"/>
                <Button x:Name="bt_end" Content="Beenden" HorizontalAlignment="Left" Margin="126,132,0,0" VerticalAlignment="Top" Width="75" Click="bt_end_Click"/>
            </Grid>
            <Grid x:Name="grid_options" Background="LightGray" Margin="64,128,0,165" HorizontalAlignment="Left" Width="140">
                <Label Content="Optionen" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontWeight="Bold" Background="DarkGray"/>
                <Label Content="Tempo:" Margin="0,139,0,0" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top"/>
                <CheckBox x:Name="cb_wall" Content="Mauer" Margin="5,119,5,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
                <ComboBox x:Name="cob_level" Margin="5,92,5,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False">
                    <ComboBoxItem Content="Level 0" IsSelected="True"/>
                    <ComboBoxItem Content="Level 1"/>
                    <ComboBoxItem Content="Level 2"/>
                    <ComboBoxItem Content="Level 3"/>
                    <ComboBoxItem Content="Level 4"/>
                </ComboBox>
                <ComboBox x:Name="cb_speed" Margin="0,141,5,0" VerticalAlignment="Top" SelectionChanged="cb_speed_SelectionChanged" SelectedIndex="0" HorizontalAlignment="Right">
                    <ComboBoxItem Content="25%" IsSelected="True"/>
                    <ComboBoxItem Content="50%"/>
                    <ComboBoxItem Content="75%"/>
                    <ComboBoxItem Content="100%"/>
                </ComboBox>
                <Button x:Name="bt_start" Content="Start" HorizontalAlignment="Left" Margin="5,165,0,0" VerticalAlignment="Top" Click="bt_start_Click" Width="128"/>
                <RadioButton x:Name="rb_single" Content="Einzelspieler" HorizontalAlignment="Left" Margin="5,32,0,0" VerticalAlignment="Top" GroupName="rb_mode" IsChecked="True" Checked="rb_single_Checked"/>
                <RadioButton x:Name="rb_multi_local" Content="Mehrspieler/Lokal" HorizontalAlignment="Left" Margin="5,52,0,0" VerticalAlignment="Top" GroupName="rb_mode" Checked="rb_multi_local_Checked"/>
                <RadioButton x:Name="rb_multi_online" Content="Mehrspieler/Online" HorizontalAlignment="Left" Margin="5,72,0,0" VerticalAlignment="Top" GroupName="rb_mode" Checked="rb_multi_online_Checked"/>
            </Grid>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="302,370,0,0" Stroke="DarkRed" VerticalAlignment="Top" Width="25" ToolTip="DarkRed">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Maroon" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="242,370,0,0" Stroke="DimGray" VerticalAlignment="Top" Width="25" ToolTip="Black">
                <Rectangle.Fill>
                    <SolidColorBrush Color="DimGray" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="272,370,0,0" Stroke="Red" VerticalAlignment="Top" Width="25" ToolTip="Red">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Red" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="332,370,0,0" Stroke="Lime" VerticalAlignment="Top" Width="25" ToolTip="Lime">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Lime" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="362,370,0,0" Stroke="DarkGreen" VerticalAlignment="Top" Width="25" ToolTip="DarkGreen">
                <Rectangle.Fill>
                    <SolidColorBrush Color="DarkGreen" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="392,370,0,0" Stroke="Blue" VerticalAlignment="Top" Width="25" ToolTip="Blue">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Blue" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="422,370,0,0" Stroke="Navy" VerticalAlignment="Top" Width="25" ToolTip="DarkBlue">
                <Rectangle.Fill>
                    <SolidColorBrush Color="DarkBlue" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="572,370,0,0" Stroke="Turquoise" VerticalAlignment="Top" Width="25" ToolTip="Turqouise">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Turquoise" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="452,370,0,0" Stroke="DarkOrange" VerticalAlignment="Top" Width="25" ToolTip="Orange">
                <Rectangle.Fill>
                    <SolidColorBrush Color="DarkOrange" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="482,370,0,0" Stroke="Yellow" VerticalAlignment="Top" Width="25" ToolTip="Yellow">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Yellow" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="512,370,0,0" Stroke="Purple" VerticalAlignment="Top" Width="25" ToolTip="Purple">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Purple" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="542,370,0,0" Stroke="DeepPink" VerticalAlignment="Top" Width="25" ToolTip="DeepPink">
                <Rectangle.Fill>
                    <SolidColorBrush Opacity="0.9" Color="DeepPink"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="25" Margin="602,370,0,0" Stroke="Cyan" VerticalAlignment="Top" Width="25" ToolTip="Cyan">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Cyan" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Height="25" Margin="632,370,0,0" Stroke="DarkGray" VerticalAlignment="Top" HorizontalAlignment="Left" Width="25" ToolTip="Gray">
                <Rectangle.Fill>
                    <SolidColorBrush Color="DarkGray" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="113" Margin="244,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="383" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
            <Label x:Name="label" Content="DebugConsole" HorizontalAlignment="Left" Margin="156,10,0,0" VerticalAlignment="Top"/>
            <Button x:Name="button" Content="Delete" HorizontalAlignment="Left" Margin="164,36,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        </Grid>
    </Grid>
</Window>
